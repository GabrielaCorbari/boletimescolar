<!-- .row title -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Notas</h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- .row body -->
<div class="row" ng-app="notasApp" ng-controller="notasCtrl">
    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" ng-click="new()" data-toggle="modal" data-target="#edit_notas"><i class="fa fa-plus" ></i> New</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" datatable dt-options="dtOptions"  dt-columns="dtColumns" dt-instance="dtInstance" >
                            <thead>
                                <tr>
                                    <th>Avaliacao</th>
                                    <th>Frequencia</th>
                                    <th>AlunoId</th>
                                    <th>DisciplinaId</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- edit_notas Modal -->
        <div class="modal fade" id="edit_notas" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">New/Edit Notas</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" role="form" action="/orders/new" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                 <div class="panel-body">
                                        <div class="row">
                                            <input type="hidden" id="notas_avaliacao" name="notas_avaliacao" ng-model="notas.avaliacao">
                                            
                                            <div class="form-group">
                                                <label>Frequencia</label>
                                                <input class="form-control" placeholder="Frequencia" id="notas_frequencia" name="notas_frequencia" ng-model="notas.frequencia">
                                                <p class="help-block">Notas's Frequencia</p>
                                            </div>
                                            <div class="form-group">
                                                <label>AlunoId</label>
                                                <input class="form-control" placeholder="AlunoId" id="notas_alunoId" name="notas_alunoId" ng-model="alunoText" 
														bs3-typeahead bs3-promise="alunos" bs3-displayText="displayTextAluno" bs3-afterSelect="afterSelectAluno">
                                                <p class="help-block">Notas's AlunoId</p>
                                            </div>
                                            <div class="form-group">
                                                <label>DisciplinaId</label>
                                                <input class="form-control" placeholder="DisciplinaId" id="notas_disciplinaId" name="notas_disciplinaId" ng-model="disciplinaText"
													bs3-typeahead bs3-promise="disciplinas" bs3-displayText="displayTextDisciplina" bs3-afterSelect="afterSelectDisciplina">
                                                <p class="help-block">Notas's DisciplinaId</p>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton" ng-click="save()" data-dismiss="modal">Submit</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>