<!-- .row title -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Aluno</h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- .row body -->
<div class="row" ng-app="alunoApp" ng-controller="alunoCtrl">
    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" ng-click="new()" data-toggle="modal" data-target="#edit_aluno"><i class="fa fa-plus" ></i> New</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" datatable dt-options="dtOptions"  dt-columns="dtColumns" dt-instance="dtInstance" >
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Sobrenome</th>
                                    <th>Ra</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- edit_aluno Modal -->
        <div class="modal fade" id="edit_aluno" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">New/Edit Aluno</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" role="form" action="/orders/new" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                 <div class="panel-body">
                                        <div class="row">
                                            <input type="hidden" id="aluno_id" name="aluno_id" ng-model="aluno.id">
                                            
                                            <div class="form-group">
                                                <label>Nome</label>
                                                <input class="form-control" placeholder="Nome" id="aluno_nome" name="aluno_nome" ng-model="aluno.nome">
                                                <p class="help-block">Aluno's Nome</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Sobrenome</label>
                                                <input class="form-control" placeholder="Sobrenome" id="aluno_sobrenome" name="aluno_sobrenome" ng-model="aluno.sobrenome">
                                                <p class="help-block">Aluno's Sobrenome</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Ra</label>
                                                <input class="form-control" placeholder="Ra" id="aluno_ra" name="aluno_ra" ng-model="aluno.ra">
                                                <p class="help-block">Aluno's Ra</p>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton" ng-click="save()" data-dismiss="modal">Submit</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>